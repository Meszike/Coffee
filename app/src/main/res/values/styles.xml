<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bigSize</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView2">
        <item name="android:layout_width">@dimen/material_margin_4</item>
        <item name="android:layout_height">@dimen/material_margin_4</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_4</item>
        <item name="android:layout_marginTop">@dimen/material_margin_2</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/material_margin_3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/material_text_size_3</item>
    </style>

    <style name="TextView2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_4</item>
        <item name="android:layout_marginTop">@dimen/material_margin_1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#000000</item>
        <item name="android:textSize">@dimen/material_text_size_2</item>
    </style>

    <style name="TextView3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/material_margin_3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_size_2</item>
    </style>

    <style name="TextView4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_4</item>
        <item name="android:layout_marginTop">@dimen/material_margin_3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_size_2</item>
    </style>

    <style name="TextView5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_2</item>
        <item name="android:layout_marginTop">@dimen/material_margin_2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/material_text_size_1</item>
    </style>


    <style name="TextView1LAnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/material_margin_2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/material_text_size_3</item>
    </style>

</resources>
